<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="amhiggin.scss.tcd.ie.carmeleon.MainMenu">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:background="#ffe091"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editUsername"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="593dp"
        android:layout_height="83dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editUsername"
        android:layout_gravity="center_vertical"
        android:text="Username"
        android:textSize="20dp"
        android:layout_above="@+id/editPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:text="Password"
        android:id="@+id/editPassword"
        android:layout_gravity="bottom"
        android:textSize="20dp"
        android:layout_above="@+id/enterButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterButton"
        android:text="Enter"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goToNewsfeedActivity"/>
</RelativeLayout>
